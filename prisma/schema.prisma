generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}
        

model User {
  id             String    @id @default(uuid())
  firstName      String
  lastName       String
  about          String?
  email          String?   @unique
  profileImage   String?
  socialLinks    Json      @default("[]")
  skills         Json      @default("[]")
  rating         Float?
  joinedAt       DateTime  @default(now())
  username       String?   @unique
  cradits        Int       @default(7)
  occupation     Json      @default("[]")
  duration       String?
  education      Json      @default("[]")

  @@map("users")
}

model PortfolioProject {
  id          String   @id @default(uuid())
  title       String
  description String
  link        String?
  duration    String?
  clientName  String?
  teamMembers Int?
  userId      String   
  userRole    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  

  @@map("portfolio_projects")
}

model UserCreatedproject {
  id          String   @id @default(uuid())
  userId      String   
  title       String
  description String
  pricing     Float
  category    Json      @default("[]")
  skills      Json      @default("[]")
  duration    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  proposals   Proposal[]

  @@map("user_created_projects")
}

model Proposal {
  id          String   @id @default(uuid())
  userId      String
  projectId   String
  coverLetter String
  status      String   @default("pending")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  project     UserCreatedproject @relation(fields: [projectId], references: [id])

  @@map("proposals")
}

model asFreelancer {
  id          String   @id @default(uuid())
  userId      String  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@map("as_freelancers")
}

model asJobCreater {
  id          String   @id @default(uuid())
  userId      String   
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@map("as_job_creaters")
}